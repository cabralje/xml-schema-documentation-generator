#############################################################################
# Don't touch these...
#############################################################################

this_makefile := ${lastword ${MAKEFILE_LIST}}
SHELL = @bash@ -o pipefail -o errexit -o nounset
# generated dependencies for things derived from the NDR doc
dependencies_mk := @builddir@/dependencies.mk
.SECONDARY:
.DELETE_ON_ERROR:

#HELP:Default target is "all". Targets include:
.DEFAULT_GOAL = all

#############################################################################
# dirs

srcdir = @srcdir@
builddir = @builddir@
output_dir = @output_dir@
xml_catalog = @xml_catalog@

#############################################################################
# COMMANDS

# autoconf stuff
MKDIR_P = @MKDIR_P@
INSTALL = @INSTALL@
SED = @SED@
# unix stuff
find = @find@

# webb stuff
saxon = @saxon@

#############################################################################
# variables

install_files_rel = \
  index.html

all_files = ${install_files_rel:%=${builddir}/build/%}
install_files = ${install_files_rel:%=${output_dir}/%}

dot_files = ${shell ${find} build -type f -name '*.dot'}
png_files = ${dot_files:%.dot=%.png}
map_files = ${dot_files:%.dot=%.map}

#############################################################################
# real targets

.PHONY: all #    build everything
all: ${all_files}

.PHONY: install #    install everything to $output_dir
install: ${install_files}

.PHONY: dot #   build everything from dot files
dot: ${png_files} ${map_files}

#############################################################################
# build

${builddir}/build/index.html: ${builddir}/build/prefixes.xml
	${MKDIR_P} ${dir $@}
	${saxon} --xsl=${srcdir}/xsl/index-list-of-namespaces.xsl \
	  --in=$< --out=$@

${builddir}/build/prefixes.xml: ${xml_catalog} ${srcdir}/xsl/collect-prefixes.xsl
	${MKDIR_P} ${dir $@}
	${saxon} --xsl=${srcdir}/xsl/collect-prefixes.xsl \
	  --in=${xml_catalog} \
	  --out=$@

# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

%.png %.map: %.dot
	dot -Tpng -o$*.png -Tcmapx -o $*.map $<

#############################################################################
# install

${output_dir}/%: ${builddir}/build/%
	${MKDIR_P} ${dir $@}
	${INSTALL} -m 644 $< $@

#############################################################################
# convenience targets

.PHONY: clean #    clean regular build products
clean:
	${RM} -r ${all_files}

.PHONY: distclean #    Clean all products
distclean: clean
	${RM} ${dependencies_mk} config.log config.status Makefile

#############################################################################
# make help: this must be the last target

.PHONY: help #    Print this help
help:
	@ ${SED} -e '/^\.PHONY:/s/^\.PHONY: *\([^ #]*\) *\#\( *\)\([^ ].*\)/\2\1: \3/p;/^[^#]*#HELP:/s/[^#]*#HELP:\(.*\)/\1/p;d' ${this_makefile}

# don't put anything after this
